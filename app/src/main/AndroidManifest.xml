<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешения -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Prac_2_4"
        tools:targetApi="31">

        <!-- Активити, которая является входной точкой и представляет стартовый экран -->
        <activity android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">

            <!-- Фильтр действия для запуска активити приложения -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Остальные активити -->
        <activity android:name=".ScrollAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity android:name=".GridAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity android:name=".FrameAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity android:name=".TableAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity3"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity2"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>

